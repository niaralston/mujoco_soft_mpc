<!-- Checkpoint 1 completed -->
<mujoco model="Softwalker">
  <option solver="Newton" tolerance="1e-6" timestep="1e-3" integrator="implicitfast"/>

  <size nstack="10000000"/>

  <statistic extent="2" center="0 0 1"/>

  <visual>
    <headlight ambient=".4 .4 .4" diffuse=".8 .8 .8" specular="0.1 0.1 0.1"/>
    <map znear=".01"/>
    <quality shadowsize="2048"/>
    <global elevation="-15"/>
  </visual>

  <asset>
    <texture name="blue_grid" type="2d" builtin="checker" rgb1=".02 .14 .44" rgb2=".27 .55 1" width="300" height="300" mark="edge" markrgb="1 1 1"/>
    <material name="blue_grid" texture="blue_grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>

    <texture name="grey_grid" type="2d" builtin="checker" rgb1=".26 .26 .26" rgb2=".6 .6 .6" width="300" height="300" mark="edge" markrgb="1 1 1"/>
    <material name="grey_grid" texture="grey_grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
    <texture name="skybox" type="skybox" builtin="gradient" rgb1=".66 .79 1" rgb2=".9 .91 .93" width="800" height="800"/>

    <material name="self" rgba=".7 .5 .3 1"/>
    <material name="self_default" rgba=".7 .5 .3 1"/>
    <material name="self_highlight" rgba="0 .5 .3 1"/>
    <material name="effector" rgba=".7 .4 .2 1"/>
    <material name="effector_default" rgba=".7 .4 .2 1"/>
    <material name="effector_highlight" rgba="0 .5 .3 1"/>
    <material name="decoration" rgba=".2 .6 .3 1"/>
    <material name="eye" rgba="0 .2 1 1"/>
    <material name="target" rgba=".6 .3 .3 1"/>
    <material name="target_default" rgba=".6 .3 .3 1"/>
    <material name="target_highlight" rgba=".6 .3 .3 .4"/>
    <material name="site_material" rgba=".5 .5 .5 .3"/>
    <material name="force_visual" rgba="1 0 0 0.8"/>
  </asset>

  <default>
    <joint damping=".1" armature="0.01" limited="true" solimplimit="0 .99 .01"/>
    <geom contype="1" conaffinity="0" friction="1.0 0.5 0.5" condim="6"/>
    <motor ctrlrange="-1 1" ctrllimited="true"/>
    <site size="0.01"/>
    <default class="walker">
      <geom material="self" type="capsule"/>
      <joint axis="0 -1 0"/>
    </default>
    <default class="flexible">
      <joint axis="0 -1 0" range="-150 0"/>
    </default>
  </default>

  <worldbody>
    <geom name="floor" type="plane" conaffinity="1" pos="998 0 0" size="1000 .8 .2" material="blue_grid" zaxis="0 0 1"/>
    <camera name="sideon" pos="0 -10 5" fovy="45" mode="targetbody" target="torso" />
    <camera name="float_far"  pos="-4 0 2" xyaxes="0 -1 0 .5 0 1" mode="trackcom" fovy="90"/>
    <body name="torso" pos="0 0 1.3" childclass="walker">
      <light name="light" pos="0 0 2" mode="trackcom"/>
      <camera name="floating"  pos="-2 0 1" xyaxes="0 -1 0 .5 0 1" mode="trackcom" fovy="90"/>
      <camera name="egocentric"  pos=".25 0 .11" xyaxes="0 -1 0 0 0 1" fovy="90" />
      <joint name="rootz" axis="0 0 1" type="slide" limited="false" armature="0" damping="0.1"/>
      <joint name="rootx" axis="1 0 0" type="slide" limited="false" armature="0" damping="0.1"/>
      <joint name="rooty" axis="0 1 0" type="hinge" limited="true" range="-2 2" armature="0.1" damping="2.0"/>
      <geom name="torso" size="0.25 0.3" mass="2.0" zaxis="0 1 0" pos="0 0 0.1"/>
      <site name="torso_site" pos="0 0 0" size="0.01"/>
      <body name="right_thigh" pos="0 -.3 -0.3" childclass="walker">
        <joint name="right_hip" range="-20 100" damping=".1" armature="0.01"/>
        <geom name="right_thigh" pos="0 0 -0.225" size="0.25 0.225" mass="0.1" type="capsule"/>
        <body name="right_leg" pos="0 0 -0.45" childclass="flexible">
          <joint name="right_knee" pos="0 0 0.25" damping=".1" armature="0.01"/>
          <geom name="right_leg" type="sphere" size="0.05" mass="0.1" contype="0" conaffinity="0"/>
          <flexcomp type="cylinder" count="6 6 16" spacing=".12 .12 .04" pos="0 0 -0.3" dim="3"
                    radius=".001" rgba="0 .7 .7 1" mass="0.1" name="right_shin" dof="radial">
            <edge equality="true" solimp="0 0.9 0.01" solref=".02 1"/>
            <contact selfcollide="none" internal="false"/>
          </flexcomp>
          <!-- Debug sites for contact visualization -->
          <site name="right_foot_center" pos="0 0 -0.6" size="0.02" material="force_visual"/>
          <site name="right_foot_front" pos="0.1 0 -0.6" size="0.02" material="force_visual"/>
          <site name="right_foot_back" pos="-0.1 0 -0.6" size="0.02" material="force_visual"/>
        </body>
      </body>
      <body name="left_thigh" pos="0 .3 -0.3" childclass="walker">
        <joint name="left_hip" range="-20 100" damping=".1" armature="0.01"/>
        <geom name="left_thigh" pos="0 0 -0.225" size="0.25 0.225" mass="0.1" type="capsule"/>
        <body name="left_leg" pos="0 0 -0.45" childclass="flexible">
          <joint name="left_knee" pos="0 0 0.25" damping=".1" armature="0.01"/>
          <geom name="left_leg" type="sphere" size="0.05" mass="0.1" contype="0" conaffinity="0"/>
          <flexcomp type="cylinder" count="6 6 16" spacing=".12 .12 .04" pos="0 0 -0.3" dim="3"
                    radius=".001" rgba="0 .7 .7 1" mass="0.1" name="left_shin" dof="radial">
            <edge equality="true" solimp="0 0.9 0.01" solref=".02 1"/>
            <contact selfcollide="none" internal="false"/>
          </flexcomp>
          <!-- Debug sites for contact visualization -->
          <site name="left_foot_center" pos="0 0 -0.6" size="0.02" material="force_visual"/>
          <site name="left_foot_front" pos="0.1 0 -0.6" size="0.02" material="force_visual"/>
          <site name="left_foot_back" pos="-0.1 0 -0.6" size="0.02" material="force_visual"/>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="right_hip" joint="right_hip" gear="100"/>
    <motor name="right_knee" joint="right_knee" gear="50"/>
    <motor name="left_hip" joint="left_hip" gear="100"/>
    <motor name="left_knee" joint="left_knee" gear="50"/>
    <!-- Passive stabilizing force to prevent torso rolling -->
    <general name="torso_stabilizer" joint="rooty" dyntype="none" gaintype="fixed" gainprm="5.0" biastype="none" biasprm="0"/>
  </actuator>


</mujoco> 